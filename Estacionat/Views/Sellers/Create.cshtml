@model Estacionat.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Seller</h2>

<div class="row">
    <form class="col s12" asp-action="Create">
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Seller.Name" type="text" class="validate">
                <label asp-for="Seller.Name" class="control-label">Name</label>
            </div>
            <div class="input-field col s6">
                <input asp-for="Seller.Email" type="email" class="validate">
                <label asp-for="Seller.Email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Seller.BirthDate" type="date" class="datepicker">
                <label asp-for="Seller.BirthDate">Birth</label>
            </div>

            <div class="input-field col s6">
                <input asp-for="Seller.BaseSalary" type="number" class="datepicker">
                <label asp-for="Seller.BaseSalary">Salary</label>
            </div>
            <div class="input-field col s12">
                <label class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id",
"Name"))"></select>
            </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">
            Submit
            <i class="material-icons right">send</i>
        </button>
        <a asp-action="Index" class="btn blue-grey right">Cancel</a>
    </form>

</div>
